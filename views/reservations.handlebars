{{! navbar }}
<div class="container-fluid fixed-top">
    <div class="navbar fixed-top bg-dark-subtle border-bottom border-primary" id="navbarNav">
        <a class="navbar-brand" href="/"><img height="40" src="/pictures/icon.png"/></a>
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/flights/search">Flight Search</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/reservations/book">Book Flights</a>
            </li>
            {{#if userId}}
                {{#if isAdmin}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/reservations/list">Reservation Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/flights">Flight Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile/">User Management</a>
                    </li>
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/reservations/list">My Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile/">Profile</a>
                    </li>
                {{/if}}
                <li class="nav-item">
                    <a class="nav-link text-danger fw-bold" href="/profile/logout">Logout</a>
                </li>
            {{else}}
                <li class="nav-item">
                    <a class="nav-link" href="/profile/login">Login</a>
                </li>
            {{/if}}
            <li class="nav-item">
                <button class="btn"><i id="toggleDark" class="bi bi-sun-fill"></i></button>
            </li>
        </ul>
    </div>
</div>

{{!-- Form Message --}}
{{#equals status "updated"}}
    <div class="form-msg alert alert-success alert-dismissible fade show w-50 mx-auto text-center" role="alert">
        <i class="bi bi-check-circle"></i> Reservation updated successfully!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{else}}
    {{#equals status "cancelled"}}
        <div class="form-msg alert alert-danger alert-dismissible fade show w-50 mx-auto text-center" role="alert">
            <i class="bi bi-check-circle"></i> Reservation cancelled successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{else}}
        {{#equals status "error"}}
            <div class="form-msg alert alert-danger alert-dismissible fade show w-50 mx-auto text-center" role="alert">
                <i class="bi bi-exclamation-triangle"></i> Edit error. Please try again.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/equals}}
    {{/equals}}
{{/equals}}

{{! header }}
<div class="container text-center pt-5 mt-5">
    <h1 class="title display-5 text-primary mt-5">My Reservations</h1>
    <p class="lead">View your current and past bookings</p>
</div>

<!-- TABLE -->
<div class="container mt-4 mb-5">
  <div class="table-responsive bg-dark-subtle border border-primary rounded-3 shadow p-3">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-primary text-dark">
          <tr>
              <th>Booking ID</th>
              <th>Passenger Name</th>
              <th>Flight Number</th>
              <th>Origin</th>
              <th>Destination</th>
              <th>Departure</th>
              <th>Status</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody id="reservationTable">
        {{#each reservations}}
        <tr
          data-id="{{bookingId}}"
          data-passenger="{{passengerName}}"
          data-email="{{passengerEmail}}"
          data-phone="{{phoneNum}}"
          data-passport="{{passport}}"
          
          data-flight="{{flight}}"
          data-airline="{{flightDetails.airline}}"
          data-origin="{{flightDetails.origin}}"
          data-destination="{{flightDetails.destination}}"
          data-departure="{{flightDetails.departureTime}}"
          data-arrival="{{flightDetails.arrivalTime}}"
          
          data-meal="{{package.meal}}"
          data-seat="{{package.seat}}"
          data-baggage="{{package.baggageWeight}}"
          data-price="â‚±{{totalPrice}}"
          data-status="{{status}}"
      >
          <td>{{bookingId}}</td>
          <td>{{passengerName}}</td>
          <td>{{flight}}</td> {{! Display the string directly }}
          <td>{{flightDetails.origin}}</td>
          <td>{{flightDetails.destination}}</td>
          <td>{{flightDetails.departureTime}}</td>
          <td>
              {{#equals status "Confirmed"}}
                  <span class="badge bg-success">Confirmed</span>
              {{else}}
                  {{#equals status "Pending"}}
                      <span class="badge bg-warning text-dark">Pending</span>
                  {{else}}
                      <span class="badge bg-danger">Cancelled</span>
                  {{/equals}}
              {{/equals}}
          </td>
          <td class="d-flex gap-1">
              {{! Edit Button }}
              {{#equals status "Cancelled"}}
                  <button class="btn btn-outline-secondary btn-sm" disabled>
                      <i class="bi bi-pencil"></i> Edit
                  </button>
              {{else}}
                  <a href="/reservations/edit/{{_id}}" class="btn btn-outline-primary btn-sm">
                      <i class="bi bi-pencil"></i> Edit
                  </a>
              {{/equals}}

              {{! Cancel Button }}
              {{#equals status "Cancelled"}}
                  {{else}}
                  <form action="/reservations/delete/{{_id}}" method="POST" style="display:inline-block;">
                      <button class="btn btn-outline-danger btn-sm">
                          <i class="bi bi-x-circle"></i> Cancel
                      </button>
                  </form>
              {{/equals}}

              {{! View Details Button }}
              <button class="btn btn-outline-info btn-sm viewDetails">
                  <i class="bi bi-eye"></i> View Details
              </button>
          </td>
        </tr>
          {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{! modal for details }}
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark-subtle border border-primary">
            <div class="modal-header bg-dark-subtle">
                <h5 class="modal-title text-primary">Reservation Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                {{! content injected via JS }}
                <div id="bookingDetails" class="text-light-emphasis"></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

<script>
  $(document).ready(function() {
      
      // Dark Mode Toggle
  $('#toggleDark').click(function() {
      var currentTheme = $('html').attr('data-bs-theme');
      var newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      $('html').attr('data-bs-theme', newTheme);

      $('#navbarNav').toggleClass('bg-dark-subtle bg-primary-subtle');
      $('#navbarNav').toggleClass('text-dark-emphasis text-primary-emphasis');
      $('#toggleDark').toggleClass('bi-sun-fill bi-moon-fill');
      $('body').toggleClass('text-bg-dark text-bg-light');
      $('body').toggleClass('bg-secondary-subtle bg-light');
  });

  // Confirm Cancellation
  $('form[action^="/reservations/delete/"]').on('submit', function(e) {
      const confirmed = confirm('Are you sure you want to cancel this reservation? This action cannot be undone.');
      if (!confirmed) {
          e.preventDefault();
      }
  });

  // View Details Modal Logic
  $('.viewDetails').click(function() {
      const row = $(this).closest('tr');
      
      // Read from the data attributes (populated from server)
      const bookingData = {
        id: row.data('id'),
        passenger: row.data('passenger'),
        email: row.data('email'),
        phone: row.data('phone'),
        passport: row.data('passport'),
        flight: row.data('flight'),
        airline: row.data('airline'),
        origin: row.data('origin'),
        destination: row.data('destination'),
        departure: row.data('departure'),
        arrival: row.data('arrival'),
        meal: row.data('meal'),
        seat: row.data('seat'),
        baggage: row.data('baggage'),
        price: row.data('price'),
        status: row.data('status')
      };

      // Construct the specific UI layout
      const detailsHTML = `
          <div class="container">
              <div class="row mb-3">
                  <div class="col-md-6 border-end">
                      <h5 class="text-primary mb-3">Passenger Information</h5>
                      <p class="mb-1"><strong>Name:</strong> ${bookingData.passenger}</p>
                      <p class="mb-1"><strong>Email:</strong> ${bookingData.email}</p>
                      <p class="mb-1"><strong>Phone:</strong> ${bookingData.phone}</p>
                      <p class="mb-1"><strong>Passport:</strong> ${bookingData.passport}</p>
                  </div>
                  <div class="col-md-6 ps-4">
                      <h5 class="text-primary mb-3">Flight Information</h5>
                      <p class="mb-1"><strong>Airline:</strong> ${bookingData.airline}</p>
                      <p class="mb-1"><strong>Flight No:</strong> ${bookingData.flight}</p>
                      <p class="mb-1"><strong>Route:</strong> ${bookingData.origin} <i class="bi bi-arrow-right"></i> ${bookingData.destination}</p>
                      <p class="mb-1"><strong>Schedule:</strong> ${bookingData.departure} - ${bookingData.arrival}</p>
                  </div>
              </div>
              <hr>
              <div class="row mt-3">
                  <div class="col-md-6 border-end">
                      <h5 class="text-primary mb-3">Package Details</h5>
                      <p class="mb-1"><strong>Seat(s):</strong> ${bookingData.seat}</p>
                      <p class="mb-1"><strong>Meal Preference:</strong> ${bookingData.meal}</p>
                      <p class="mb-1"><strong>Baggage:</strong> ${bookingData.baggage} kg</p>
                  </div>
                  <div class="col-md-6 ps-4">
                      <h5 class="text-primary mb-3">Payment Status</h5>
                      <h3 class="text-success fw-bold">${bookingData.price}</h3>
                      <p><strong>Status:</strong> 
                          <span class="badge ${
                              bookingData.status === 'Confirmed' ? 'bg-success' :
                              bookingData.status === 'Pending' ? 'bg-warning text-dark' :
                              'bg-danger'
                          }">
                              ${bookingData.status}
                          </span>
                      </p>
                  </div>
              </div>
          </div>
      `;

      $('#bookingDetails').html(detailsHTML);
      const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));
      detailsModal.show();
  });
});
</script>